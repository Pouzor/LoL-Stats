{% extends "PouzorLolStatBundle::layout.html.twig" %}

{% block body %}

<h3>Liste des Summoners</h3>

<br />
<div class="row">
	<table class="table table-condensed table-striped table-bordered table-hover" style="width: 500px">
		<thead>
			<tr>
				<th class="col-md-1">#</th>
				<th class="col-md-1">Nom</th>
				<th class="col-md-1">Rank</th>
			</tr>
		</thead>
		<tbody>
			{% for s in summoners %}
			<tr>
				<td>{{ s.id }}</td>
				<td><a href="{{path("show_sommoner", {"id": s.id})}}">{{ s.name }}</a></td>
				<td>TODO</td>
			</tr>
			{% endfor %}
		</tbody>	
	</table>
</div>


{% endblock body %}
